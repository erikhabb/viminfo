[user]
	name = Erik
  email = erik.habbinga@schneider-electric.com
[color]
 branch = auto
 diff = auto
 status = auto
[color "branch"]
 current = yellow reverse
 local = yellow
 remote = green
[color "diff"]
 meta = yellow bold
 frag = magenta bold
 old = red
 new = cyan
[color "status"]
 added = yellow
 changed = green
 untracked = cyan
[core]
	pager = cat
	excludesfile = /home/erik/.gitignore_global
	editor = vim
  autocrlf = input
[alias]
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
